<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        >
        <ImageButton
            android:id="@+id/backI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/back_icon"
            android:onClick="backI"></ImageButton>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="가게 이름"
            android:textColor="#000000"
            android:textSize="40sp">
        </TextView>

        <ImageButton
            android:id="@+id/callI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:background="@drawable/call"
            android:onClick="call"></ImageButton>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingStart="5dp"
        android:paddingTop = "10dp"
        android:background="@drawable/top"
        android:text="대표 메뉴"
        android:textColor="#080909"
        android:textSize="24sp" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:scale_base_width="110"
        app:scale_base_height="70">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            app:scale_width="50"
            app:scale_height="50"
            app:scale_top="10"
            app:scale_left="0"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/imageView4"
            app:scale_top="10"
            app:scale_height="50"
            app:scale_width="50"
            app:scale_left="60"
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="MissingPrefix" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가게 정보"
        android:paddingTop = "10dp"
        android:textColor="#080909"
        android:textSize="24sp"
        android:background="@drawable/top"/>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="200"
        app:scale_base_height="100">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textColor="#080909"
            app:scale_width="200"
            app:scale_height="15"
            app:scale_textsize="10"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textColor="#0B0B0B"
            app:scale_width="200"
            app:scale_height="15"
            app:scale_textsize="10"
            app:scale_top="15"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textColor="#0B0B0B"
            app:scale_width="200"
            app:scale_height="15"
            app:scale_textsize="10"
            app:scale_top="30"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="브레이크 타임"
            android:textColor="#0B0B0B"
            app:scale_width="200"
            app:scale_height="15"
            app:scale_textsize="10"
            app:scale_top="45"
            tools:ignore="MissingPrefix"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>