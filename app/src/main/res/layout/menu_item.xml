<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">>
        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background ="@drawable/cardv"
            app:scale_base_height="28"
            app:scale_base_width="100">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가게 이름"
                android:fontFamily="@font/nanumsquare_acb"
                android:textColor="#000000"
                app:scale_width="90"
                app:scale_height="12"
                app:scale_textsize="7"
                app:scale_top="3"
                app:scale_left="4"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주소"
                android:fontFamily="@font/nanumsquare_acb"
                android:textColor="#97000000"
                app:scale_textsize="5"
                app:scale_height="12"
                app:scale_width="60"
                app:scale_top="13"
                app:scale_left="4"
                app:textview_wrapcontent_direction="bottom"
                app:textview_wrapcontent_movesiblings="true"
                app:textview_wrapcontent_resizesurrounded="true"
                tools:ignore="MissingPrefix" />

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>